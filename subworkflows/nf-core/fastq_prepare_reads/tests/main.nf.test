// nf-core subworkflows test fastq_prepare_reads
nextflow_workflow {

    name "Test Subworkflow FASTQ_PREPARE_READS"
    script "../main.nf"
    workflow "FASTQ_PREPARE_READS"
    
    config "./nextflow.config"

    tag "subworkflows"
    tag "subworkflows_nfcore"
    tag "subworkflows/fastq_prepare_reads"
    tag "cutadapt"
    tag "flash"
    tag "rename"


    // TODO nf-core: Change the test name preferably indicating the test-data and file-format used
    test("preprocessing - fastq - both_end") {

        when {
            workflow {
                """
                // input_ch
                input[0] = [
                    ch_input = Channel
                    .fromFilePairs('/Users/bagordo/Desktop/all/all_bioinformatics/nf-core-nanorepertoire/data/*_{1,2}.fq.gz')
                    .map{ name, reads ->
                    [[id:test], [reads[0], reads[1]]
                    ]
    }
]
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
                //TODO nf-core: Add all required assertions to verify the test output.
            )
        }
    }
}
